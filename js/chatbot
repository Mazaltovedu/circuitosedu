// script.js
const chatForm = document.getElementById("chat-form");
const userInput = document.getElementById("user-input");
const chatBox = document.getElementById("chat-box");

// Substitua aqui pela sua chave (MANTENHA-A SEGURA)
const OPENAI_API_KEY = "SUA_CHAVE_AQUI"; // <- nunca exponha isso em produção pública

chatForm.addEventListener("submit", async (e) => {
  e.preventDefault();

  const message = userInput.value.trim();
  if (!message) return;

  appendMessage("Você", message);
  userInput.value = "";

  appendMessage("MSEP Bot", "Digitando...");

  try {
    const response = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Authorization: `Bearer ${OPENAI_API_KEY}`,
      },
      body: JSON.stringify({
        model: "gpt-4",
        messages: [
          {
            role: "system",
            content:
              "Você é um especialista em Metodologia SENAI de Educação Profissional (MSEP). Responda como educador técnico experiente, com base nos documentos e princípios do MSEP.",
          },
          {
            role: "user",
            content: message,
          },
        ],
        temperature: 0.7,
        max_tokens: 800,
      }),
    });

    const data = await response.json();
    const reply = data.choices?.[0]?.message?.content || "Desculpe, não consegui responder.";

    // Remove "Digitando..."
    const typing = document.querySelector(".bot-typing");
    if (typing) typing.remove();

    appendMessage("MSEP Bot", reply);
  } catch (error) {
    console.error("Erro ao acessar a API:", error);
    appendMessage("MSEP Bot", "Ocorreu um erro. Tente novamente.");
  }
});

function appendMessage(sender, text) {
  const messageElement = document.createElement("div");
  messageElement.classList.add("message");
  messageElement.innerHTML = `<strong>${sender}:</strong> ${text}`;
  if (sender === "MSEP Bot" && text === "Digitando...") {
    messageElement.classList.add("bot-typing");
  }
  chatBox.appendChild(messageElement);
  chatBox.scrollTop = chatBox.scrollHeight;
}
