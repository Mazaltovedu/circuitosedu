const chatForm = document.getElementById("chat-form");
const userInput = document.getElementById("user-input");
const chatBox = document.getElementById("chat-box");

chatForm.addEventListener("submit", async (e) => {
  e.preventDefault();

  const message = userInput.value.trim();
  if (!message) return;

  appendMessage("VocÃª", message);
  userInput.value = "";

  appendMessage("MSEP Bot", "Digitando...");

  try {
    const response = await fetch("http://localhost:3000/api/chat", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ message }),
    });

    const data = await response.json();

    const typing = document.querySelector(".bot-typing");
    if (typing) typing.remove();

    appendMessage("MSEP Bot", data.reply || "Sem resposta.");
  } catch (error) {
    console.error(error);
    appendMessage("MSEP Bot", "Erro ao responder.");
  }
});

function appendMessage(sender, text) {
  const messageElement = document.createElement("div");
  messageElement.classList.add("message");
  messageElement.innerHTML = `<strong>${sender}:</strong> ${text}`;
  if (sender === "MSEP Bot" && text === "Digitando...") {
    messageElement.classList.add("bot-typing");
  }
  chatBox.appendChild(messageElement);
  chatBox.scrollTop = chatBox.scrollHeight;
}
